<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#334443</item>
        <item name="colorPrimaryDark">#334443</item>
        <item name="colorAccent">#334443</item>
    </style>
    <style name="spinnerTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_input_style" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxStrokeColor">#787878</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">#F5F5F0</item>
        <item name="helperTextTextColor">#000000</item>
    </style>
</resources>
